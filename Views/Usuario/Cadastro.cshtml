<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- Adiciona o SweetAlert2 -->
<script>
    function InserirUsuario() {
        // Obtenha os valores dos controles HTML
        var nome = $('#loginNome').val();
        var email = $('#loginEmail').val();
        var senha = $('#loginPassword').val();
        var telefone = $('#loginTelefone').val();
        var tipoUsuario = true;

        // Validar os campos obrigatórios
        if (nome.trim() === '') {
            Swal.fire('Erro', 'O campo Nome é obrigatório.', 'error');  // SweetAlert2
            return; // Impede o envio do formulário
        }

        if (email.trim() === '') {
            Swal.fire('Erro', 'O campo E-mail é obrigatório.', 'error');
            return;
        }


        if (senha.trim() === '') {
            Swal.fire('Erro', 'O campo Senha é obrigatório.', 'error');
            return;
        }

        if (telefone.trim() === '') {
            Swal.fire('Erro', 'O campo Telefone é obrigatório.', 'error');
            return;
        }

        // Validação de formato de telefone (exemplo simples para número de 10 dígitos)
        var telefoneRegex = /^\d{10}$/;
        if (!telefoneRegex.test(telefone)) {
            Swal.fire('Erro', 'Por favor, insira um número de telefone válido (10 dígitos).', 'error');
            return;
        }

        // Crie um objeto de usuário para enviar
        var dados = {
            Nome: nome,
            Email: email,
            Senha: senha,
            Telefone: telefone,
            TipoUsuario: tipoUsuario ? true : false
        };

        // Faça a chamada AJAX
        $.ajax({
            url: '/Usuario/InserirUsuario',
            type: "POST",
            dataType: "json",
            data: dados,
            success: function (resultado) {
                if (resultado.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Sucesso',
                        text: 'Usuário cadastrado com sucesso!',
                        confirmButtonText: 'OK'
                    }).then(function () {
                        window.location.href = "/Usuario/Login"; // Redireciona após o clique no botão OK
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Erro',
                        text: resultado.message,
                        confirmButtonText: 'OK'
                    });
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Erro',
                    text: 'Erro na requisição AJAX.',
                    confirmButtonText: 'OK'
                });
            }
        });


    }

    // Função para exibir diferentes tipos de alertas
    function exibirAlerta(tipo) {
        switch (tipo) {
            case 'Nome':
                alert('O campo Nome é obrigatório.');
                break;
            case 'Email':
                alert('O campo E-mail é obrigatório.');
                break;
            case 'Senha':
                alert('O campo Senha é obrigatório.');
                break;
            case 'Telefone':
                alert('O campo Telefone é obrigatório.');
                break;
            case 'Telefone inválido':
                alert('Por favor, insira um número de telefone válido (10 dígitos).');
                break;
            case 'Cadastro com sucesso':
                alert('Cadastro realizado com sucesso!');
                break;
            case 'Falha no cadastro':
                alert('Falha no cadastro. Tente novamente mais tarde.');
                break;
            case 'Erro na requisição AJAX':
                alert('Erro na requisição AJAX. Tente novamente.');
                break;
            default:
                alert('Ocorreu um erro desconhecido.');
        }
    }
</script>
